<%= form_for([@tour,@attraction_tour]) do |f| %>
<div class="modal-body">
  <div class="field">
    <%= f.label :radius %><br />
    <%= f.text_field :radius %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :tour_order %><br />
    <%= f.number_field :tour_order %>
  </div>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  <%= content_tag(:button, "Save", :type => :sumbit, :class => "btn btn-success") %>
</div>
<% end %>
