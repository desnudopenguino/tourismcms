<h1>Venues <%= link_to new_venue_path, :class => "btn btn-large" do %>
  <i class="icon-plus"></i>
  <% end %>
</h1>
<% @venues.each do |venue| %>
  <%= link_to venue do %>
    <div class="venue span8">
      <%= link_to venue, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger right" do %>
        <i class="icon-remove icon-white"></i> 
      <% end %>
      <%= link_to edit_venue_path(venue), :class => "btn btn-primary right" do %>
        <i class="icon-pencil icon-white"></i> 
      <% end %>
      <h2><%= venue.name %></h2>
      <p><%= venue.description %></p>
    </div>
  <% end %>
<% end %>
