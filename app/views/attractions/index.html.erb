<h1>Listing attractions</h1>

<table>
  <tr>
    <th>Tour</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Radius</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attractions.each do |attraction| %>
  <tr>
    <td><%= attraction.tour_id %></td>
    <td><%= attraction.latitude %></td>
    <td><%= attraction.longitude %></td>
    <td><%= attraction.radius %></td>
    <td><%= attraction.title %></td>
    <td><%= attraction.description %></td>
    <td><%= link_to 'Show', attraction %></td>
    <td><%= link_to 'Edit', edit_attraction_path(attraction) %></td>
    <td><%= link_to 'Destroy', attraction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

