<h1>Listing media</h1>

<table class="table table-striped">
  <tr>
    <th>Type</th>
    <th>Order</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @media.each do |medium| %>
  <tr>
    <td><%= medium.media_type %></td>
    <td><%= medium.order %></td>
    <td><%= medium.content %></td>
    <td><%= link_to 'Show', medium.content %></td>
    <td><%= link_to 'Edit', edit_polymorphic_path([@multimedia, medium]) %></td>
    <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<%= form_for([@multimedia, Medium.new]) do |f| %>
  <tr>
    <td><%= f.text_field :media_type %></td>
    <td><%= f.text_field :order %></td>
    <td><%= f.text_field :content %></td>
    <td><%= f.submit %>
    <td></td>
    <td></td>
  </tr>
<% end %>
</table>
