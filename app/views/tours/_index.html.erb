<h2>Tours</h2>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tours.each do |tour| %>
  <tr>
    <td><%= tour.title %></td>
    <td><%= tour.description %></td>
    <td><%= link_to 'Show', tour, :class => "btn btn-primary" %></td>
    <td><%= link_to 'Edit', edit_tour_path(tour), :class => "btn btn-primary" %></td>
    <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

