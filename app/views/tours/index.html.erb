<h1>Listing tours</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Location</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tours.each do |tour| %>
  <tr>
    <td><%= tour.id %></td>
    <td><%= tour.location_id %></td>
    <td><%= tour.title %></td>
    <td><%= tour.description %></td>
    <td><%= link_to 'Show', tour %></td>
    <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
    <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

